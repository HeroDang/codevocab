<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của flashcard -->
    <solid android:color="#F8F8F8" />

    <!-- Bo góc -->
    <corners android:radius="20dp" />

    <!-- Viền nhẹ cho đẹp hơn -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Đổ bóng nhẹ (Android không hỗ trợ elevation trong drawable) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
