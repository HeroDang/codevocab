<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBackCard"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Flashcards"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Module: Advanced Vocabulary"
                android:textSize="13sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_more_vert"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- PROGRESS -->
    <TextView
        android:id="@+id/tvProgressText"
        android:text="3 of 20"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="15"
        android:max="100"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/progress_blue" />

    <!-- FLASHCARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlash"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:id="@+id/flashContent"
            android:padding="24dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#EAF3FF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ICON -->
            <ImageView
                android:src="@drawable/ic_lightbulb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp" />

            <!-- FRONT: WORD -->
            <TextView
                android:id="@+id/tvWord"
                android:text="Inheritance"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- BACK SIDE -->
            <LinearLayout
                android:id="@+id/backSide"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_card_inner"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMeaning"
                    android:text="(n) TÃ­nh káº¿ thá»«a"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvExample"
                    android:text="Inheritance allows classes to reuse code."
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="â†” Swipe left/right or tap"
                android:textColor="#777"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- BUTTON BAR -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnHard"
            android:background="@drawable/bg_btn_hard"
            android:text="âœ– Hard"
            android:textColor="#FF4A4A"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnReview"
            android:background="@drawable/bg_btn_review"
            android:text="ðŸ”„ Review"
            android:textColor="#364152"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnKnow"
            android:background="@drawable/bg_btn_know"
            android:text="âœ” Know"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

</LinearLayout>
