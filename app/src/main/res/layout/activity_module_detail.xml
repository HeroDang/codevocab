<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- TOP BAR -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp" />

        <!-- LEFT TITLE BLOCK -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvModuleName"
                android:text="English Basics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvModuleDescription"
                android:text="Module 1"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- RIGHT COMPLETION BLOCK -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCompletionPercent"
                android:text="75%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Complete"
                android:textSize="12sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_graduation_cap1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <!-- PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="75"
        android:max="100"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:progressTint="#7A5CFF"
        android:backgroundTint="#D9D9D9"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tabAll"
                android:text="All  12"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="#635BFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:gravity="center"
                android:minWidth="90dp"
                android:layout_marginEnd="8dp"
                android:layout_height="40dp"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tabNotStarted"
                android:text="Not Started  3"
                android:textSize="14sp"
                android:textColor="#777777"
                android:background="#EFEFF4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:gravity="center"
                android:minWidth="90dp"
                android:layout_marginEnd="8dp"
                android:layout_height="40dp"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tabInProgress"
                android:text="In Progress  4"
                android:textSize="14sp"
                android:textColor="#777777"
                android:background="#EFEFF4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:gravity="center"
                android:minWidth="90dp"
                android:layout_marginEnd="8dp"
                android:layout_height="40dp"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tabCompleted"
                android:text="Completed"
                android:textSize="14sp"
                android:textColor="#777777"
                android:background="#EFEFF4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:gravity="center"
                android:minWidth="90dp"
                android:layout_height="40dp"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </HorizontalScrollView>



    <!-- LESSON LIST TITLE (OPTIONAL) -->
    <TextView
        android:text="Lessons"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- RECYCLER VIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubModules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
