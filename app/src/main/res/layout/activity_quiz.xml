<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tiến trình -->
    <ProgressBar
        android:id="@+id/progressQuiz"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="0"
        android:max="10"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:progressTint="@color/blue_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Điểm số -->
    <TextView
        android:id="@+id/tvScore"
        android:text="Score: 0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressQuiz"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Câu hỏi -->
    <TextView
        android:id="@+id/tvQuestion"
        android:text="What is the meaning of 'compile'?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lựa chọn A -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOption1"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Option 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Lựa chọn B -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardOption1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOption2"
            android:padding="16dp"
            android:text="Option 2"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Lựa chọn C -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOption3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardOption2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOption3"
            android:padding="16dp"
            android:text="Option 3"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Lựa chọn D -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOption4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardOption3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOption4"
            android:padding="16dp"
            android:text="Option 4"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Nút Next -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:text="Next"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardOption4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
